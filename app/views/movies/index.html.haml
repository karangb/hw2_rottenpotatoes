-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:id =>"title_header", :class =>@titleHighlight}=link_to "Movie Title", movies_path(:sorted => 'title')
      %th Rating
      %th{:id =>"release_date", :class =>@releaseHighlight}= link_to "Release Date", movies_path(:sorted => 'releaseDate')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
